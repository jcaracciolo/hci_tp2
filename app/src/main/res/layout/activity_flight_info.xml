<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_flight_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ar.edu.itba.dreamtrip.flightInfo.FlightInfo">

    <RelativeLayout
        android:id="@+id/flight_section_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/flight_airlinelogo_big"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/flight_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/flight_airlinelogo_big"
            android:text="AA#666"
            android:textSize="40dp" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="20dp"
            android:text="Follow"
            android:textSize="20dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/flight_section_opinions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/flight_section_name">

        <ImageView
            android:id="@+id/flight_star1"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_full_star" />

        <ImageView
            android:id="@+id/flight_star2"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignBottom="@id/flight_star1"
            android:layout_toRightOf="@id/flight_star1"
            android:src="@drawable/ic_full_star" />

        <ImageView
            android:id="@+id/flight_star3"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignBottom="@id/flight_star1"
            android:layout_toRightOf="@id/flight_star2"
            android:src="@drawable/ic_full_star" />

        <ImageView
            android:id="@+id/flight_star4"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignBottom="@id/flight_star1"
            android:layout_toRightOf="@id/flight_star3"
            android:src="@drawable/ic_half_star" />

        <ImageView
            android:id="@+id/flight_star5"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignBottom="@id/flight_star1"
            android:layout_toRightOf="@id/flight_star4"
            android:src="@drawable/ic_empty_star" />

        <Button
            android:id="@+id/flight_opinions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/flight_star5"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/flight_star5"
            android:text="@string/see_more_opinions" />


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/flight_section_itinerary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/flight_section_opinions"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/flight_section_itinerary_origin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/flight_origin_airport"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="EZE"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/flight_origin_city"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Buenos Aires"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/flight_departure_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="18:30"
                android:textSize="20dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/flight_section_itinerary_middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/flight_airlinelogo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/TEST"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="----->" />

            <TextView
                android:id="@+id/flight_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2h00m"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/flight_section_itinerary_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/flight_destination_airport"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="SCL"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/flight_destination_city"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Santiago de Chile"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/flight_arrival_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="20:30"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/flight_section_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/flight_section_itinerary"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/flight_details_statuscolor"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/status_green"
            android:orientation="vertical"/>


        <LinearLayout
            android:id="@+id/flight_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/flight_status_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The flight is on time"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/flight_estimated_departure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estimated departure time: 18:30"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/flight_estimated_arrival"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estimated arrival time: 20:30"
            android:textSize="20sp" />

            </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/flight_moredetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/flight_section_details"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/flight_terminal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terminal: A"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/flight_gate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gate: 17"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/flight_lgate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Luggage gate: 52"
            android:textSize="20sp" />

    </LinearLayout>

</RelativeLayout>
