<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_country_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ar.edu.itba.dreamtrip.countryInfo.CountryInfo">

    <fragment
        class="ar.edu.itba.dreamtrip.countryInfo.CountryDetailsFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/city_details"
        android:layout_weight="2"
        android:layout_gravity="top"/>

    <include
        layout="@layout/activity_map"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_gravity="end"/>

</LinearLayout>
